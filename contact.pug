extends basic.pug 

block scripts 
    script(src='/static/script.js')

block style
     style
      include ../static/style.css
      include ../static/styleContact.css
block content 
    div.container
        h1 Contact Us 
        form(action="/contact", method="post" Class="myForm")
            input(type="text", Class="myInput", name="name", placeholder="Enter the name")
            input(type="phone", Class="myInput", name="phone", placeholder="Enter the phone number")
            input(type="Email", Class="myInput", name="email", placeholder="Enter the Email id")
            input(type="text", Class="myInput", name="address", placeholder="Enter the address")
            input(type="text", Class="myInput", name="desc", placeholder="Enter the consern")
            button(class="btn")
                | Submit 
